  <div class="containerCart">
     <p class="titleCart">Giỏ hàng</p>
    <div class="row d-flex justify-content-center">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Giỏ hàng - {{totalQuantity}} sản phẩm</h5>
          </div>

          <div class="card-body">
            <!-- Single item -->
            {{#each cart}}
            <div class="row">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <img src="{{this.image}}"
                    class="w-100" alt="Blue Jeans Jacket" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong>{{this.name}}</strong></p>
                <p><strong>{{this.description}}</strong></p>
                <a href="/cart/remove-cart/{{this.id}}">
                  <button type="button" class="btn btn-primary btn-sm me-1 mb-2" data-mdb-toggle="tooltip"
                    title="Remove item">
                    <i class="fas fa-trash"></i>
                  </button>
                </a>
                <!-- Data -->
              </div>

              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Quantity -->
                <div class="d-flex mb-4" style="max-width: 300px">
                  <form action="/cart/decrement/{{this.id}}" method="post">
                    <button class="btn btn-primary px-3 me-2"
                      onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                      <i class="fas fa-minus"></i>
                    </button>
                  </form>

                  {{!-- <form class="btn btn-primary px-3 me-2" action="/cart/decrement/{{this.id}}" method="post"><input type="submit" value="-" style="max-width: 30px;"/></form> --}}

                  <div class="form-outline">
                    <input id="form1" min="0" name="quantity" value="{{this.quality}}" type="number" class="form-control quantity" />
                  </div>
                  <form action="/cart/increment/{{this.id}}" method="post">
                    <button class="btn btn-primary px-3 ms-2"
                      onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                      <i class="fas fa-plus"></i>
                    </button>
                  </form>
                </div>
                <!-- Quantity -->

                <!-- Price -->
                <p class="text-start text-md-center">
                  <strong>{{ formatNumber this.price}}</strong>
                </p>
                <!-- Price -->
              </div>
            </div>
            
            <hr class="my-4" />
            {{/each}}

          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Tổng: </h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              {{#each cart}}
                <li
                  class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                  {{this.name}}
                  <span>{{ formatNumber this.price}}</span>
                </li>
              {{/each}}
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Tổng tiền: </strong>
                </div>
                <span><strong>{{total}}</strong></span>
              </li>
            </ul>

            <form action="/payment/">
                          <button type="submit" class="btn btn-primary btn-lg btn-block">
              Thanh toán
            </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>


